@using Admin.Models
@model LoginViewModel
@{
    ViewBag.Title = "登录";
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>答题报表</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/signin.css" rel="stylesheet" />
    <link rel="shortcut icon" href="assets/ico/minus.png">
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.cookie.js"></script>
</head>

<body>
    <!-- Preloader -->
    <div id="preloader">
        <div id="status">&nbsp;</div>
    </div>
    <div class="container" id="container">
        <div class="" id="login-wrapper">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div id="logo-login">
                        <h1>
                            答题报表
                            <span>v1.0</span>
                        </h1>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="account-box">

                        <div class="form-group">
                            <!--a href="#" class="pull-right label-forgot">Forgot email?</a-->
                            <label for="inputUsernameEmail">用户名</label>
                            <input type="text" id="inputUsernameEmail" class="form-control" v-model:value="queryModel.name">
                        </div>
                        <div class="form-group">
                            <!--a href="#" class="pull-right label-forgot">Forgot password?</a-->
                            <label for="inputPassword">密码</label>
                            <input type="password" id="inputPassword" class="form-control" v-model:value="queryModel.pwd">
                        </div>
                        <button class="btn btn btn-primary pull-right" type="button" @@click.prevent.default="login()">
                            登 录
                        </button>
                        <div class="row-block">
                            <div class="row">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <p>&nbsp;</p>
        <div style="text-align:center;margin:0 auto;">

        </div>

    </div>
    <div id="test1" class="gmap3"></div>

    <script>
        var vmVue = new Vue({
            el: "#container",
            data: {
                queryModel: {
                    name: "",
                    pwd: ""
                }
            },
            methods: {
                login: function () {
                    $.ajax({
                        url: "checklogin",
                        type: "post",
                        data: vmVue.queryModel,
                        success: function (data) {


                            if (data.RspCode == 0) {
                                $.cookie("session", "1232131", { expires: 1 });
                                window.location.href = "index";
                            }
                            else alert("用户名或者密码错误！");
                        }
                    });
                }
            }
        });
    </script>

</body>
</html>
